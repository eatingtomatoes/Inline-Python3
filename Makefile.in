.PHONY: all manifest clean test 

all: %pyhelper% %perl6%

manifest:
	find . -name .git -prune \
	-o -name .gitignore -prune \
	-o -name .prove -prune \
	-o -name .travis.yml -prune \
	-o -name Makefile -prune \
	-o -type f -print | sort | cut -c 3- > MANIFEST

%pyhelper%: %source%/pyhelper.c
	%CC% $< %cflags% %ldflags% -shared -fPIC -o $@

%perl6%: %source%/perl6.c
	%CC% $< %cflags% %ldflags% -shared -fPIC -o $@

test: all
	prove -e 'perl6 -Ilib' t

clean:
	rm %pyhelper% %perl6%
	rm -rf %DESTDIR%/lib/.precomp %DESTDIR%/t/lib/.precomp
